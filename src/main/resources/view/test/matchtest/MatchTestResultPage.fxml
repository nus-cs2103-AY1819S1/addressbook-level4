<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane prefHeight="45.0" prefWidth="425.0" styleClass="grid-pane">
    <columnConstraints>
      <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    </rowConstraints>
     <children>
         <Label styleClass="label-bright-header" text="Matching Test Completed!" />
     </children>
  </GridPane>
  <GridPane styleClass="grid-pane">
    <columnConstraints>
      <ColumnConstraints fillWidth="false" halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
      <ColumnConstraints fillWidth="false" halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="40.0" valignment="CENTER" vgrow="SOMETIMES" />
      <RowConstraints minHeight="10.0" prefHeight="40.0" valignment="CENTER" vgrow="SOMETIMES" />
    </rowConstraints>
     <children>
        <HBox alignment="CENTER_LEFT" spacing="5">
           <children>
              <Label layoutX="14.0" layoutY="21.0" styleClass="label-bright" text="Test Date:" />
              <Label fx:id="testDateText" styleClass="label-bright" text="\$testDateText" />
           </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="5" GridPane.columnIndex="1">
           <children>
              <Label layoutX="14.0" layoutY="21.0" styleClass="label-bright" text="Duration:" />
              <Label fx:id="durationText" styleClass="label-bright" text="\$durationText" />
           </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="5" GridPane.rowIndex="1">
           <children>
              <Label layoutX="14.0" layoutY="23.0" styleClass="label-bright" text="Topic:" />
              <Label fx:id="topicText" styleClass="label-bright" text="\$topicText" />
           </children>
        </HBox>
        <HBox alignment="CENTER_LEFT" spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
           <children>
              <Label layoutX="14.0" layoutY="23.0" styleClass="label-bright" text="Number of Cards Tested:" />
              <Label fx:id="numOfCardsText" styleClass="label-bright" text="\$numOfCardsText" />
           </children>
        </HBox>
     </children>
  </GridPane>
  <GridPane styleClass="grid-pane">
    <columnConstraints>
      <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0" />
         <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
      <RowConstraints maxHeight="83.0" minHeight="10.0" prefHeight="37.0" vgrow="SOMETIMES" />
         <RowConstraints />
    </rowConstraints>
     <children>
         <Label fx:id="numOfAttemptsText" styleClass="label-bright" style="-fx-font-size: 15pt" text="\$numOfAttemptsText" />
     </children>
  </GridPane>
  <VBox fx:id="attemptListView" minWidth="340" prefWidth="340" styleClass="grid-pane">
     <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
     </padding>
     <children>
        <StackPane fx:id="attemptListPlaceholder" VBox.vgrow="ALWAYS" />
     </children>
  </VBox>
</VBox>
