<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane VBox.vgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT">
            <padding>
                <Insets top="5" bottom="5" right="5" left="15" />
            </padding>
            <Label fx:id="studentId" styleClass="cell_big_label" text="\$studentId" />
            <Label fx:id="marks" styleClass="cell_small_label" text="\$marks" />
        </VBox>
    </GridPane>
</VBox>
