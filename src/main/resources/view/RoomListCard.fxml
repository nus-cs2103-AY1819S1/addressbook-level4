<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="5" right="5" bottom="5" left="15" />
      </padding>
        <Label fx:id="roomNumber" text="\$first" styleClass="cell_big_label" />
         <Label fx:id="capacity" styleClass="cell_small_label" text="\$capacity" />
         <Label fx:id="expenses" styleClass="cell_small_label" text="\$expenses" />
         <Label fx:id="bookings" styleClass="cell_small_label" text="\$bookings" />
         <FlowPane fx:id="occupant" />
         <FlowPane fx:id="tags" />
    </VBox>
  </GridPane>
</HBox>
