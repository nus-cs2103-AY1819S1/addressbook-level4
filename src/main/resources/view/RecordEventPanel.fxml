<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
    <VBox alignment="CENTER_LEFT" fx:id="eventNameBox">
        <Label fx:id="eventNameLabel">
            Event Name
        </Label>
    </VBox>
    <HBox alignment="CENTER_LEFT"
          spacing="10"
          fx:id="numOfVolunteerBox">
        <Label>Total Number of Volunteers:</Label>
        <Label fx:id="numOfVolunteersLabel">0</Label>
    </HBox>
    <VBox VBox.vgrow="ALWAYS">
        <TableView fx:id="volunteerRecordTableView" prefWidth="900" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn prefWidth="50" fx:id="indexColumn" text="#"/>
                <TableColumn prefWidth="430" fx:id="nameColumn" text="Name"/>
                <TableColumn prefWidth="140" fx:id="numberColumn" text="Contact Number"/>
                <TableColumn prefWidth="50" fx:id="hourColumn" text="Hours"/>
                <TableColumn prefWidth="230" fx:id="remarkColumn" text="Remarks"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </VBox>
</VBox>
