<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="volunteerPanel" styleClass="browser-panel" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
    <VBox alignment="CENTER_LEFT">
        <Label fx:id="volunteerNameLabel" styleClass="event-name" />
        <FlowPane fx:id="volunteerTag" hgap="5"/>
        <HBox alignment="CENTER_LEFT" styleClass="volunteer-details">
            <Label fx:id="volunteerIdLabel" styleClass="detail" />
        </HBox>
        <HBox alignment="CENTER_LEFT" styleClass="volunteer-details">
            <Label fx:id="volunteerGenderLabel" styleClass="detail" />
        </HBox>
        <HBox  alignment="CENTER_LEFT" styleClass="volunteer-details">
            <Label fx:id="volunteerBirthdayLabel" styleClass="detail" />
        </HBox>
        <HBox alignment="CENTER_LEFT" styleClass="volunteer-details">
            <Label fx:id="volunteerPhoneLabel" styleClass="detail" />
        </HBox>
        <Label fx:id="volunteerEmailLabel" styleClass="detail" />
        <Label fx:id="volunteerAddressLabel" styleClass="detail" />
    </VBox>
</VBox>
