<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.Scene?>
<?import javafx.stage.Stage?>
<fx:root type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/9.0.4" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/sales.png" />
  </icons>
  <scene>
    <Scene>
      <LineChart fx:id="salesChart" prefWidth="750" prefHeight="500" title="Sales Chart"
                 xmlns="http://javafx.com/javafx/9.0.4"
                 xmlns:fx="http://javafx.com/fxml/1">
        <xAxis>
          <CategoryAxis fx:id="date" label="Date" side="BOTTOM" />
        </xAxis>
        <yAxis>
          <NumberAxis fx:id="revenue" label="Revenue" side="LEFT" />
        </yAxis>
      </LineChart>
    </Scene>
  </scene>
</fx:root>
