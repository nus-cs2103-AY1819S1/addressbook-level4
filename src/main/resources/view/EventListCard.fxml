<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" stylesheets="@EventListView.css" xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="105.0" GridPane.columnIndex="0">
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label fx:id="day" minWidth="-Infinity" styleClass="cell_big_label_day" text="\$day" />
                <Label fx:id="date" styleClass="cell_big_label_date" text="\$date" />
            </HBox>
         <VBox fx:id="events" />
            <padding>
                <Insets bottom="5" left="15" right="5" top="5" />
            </padding>
        </VBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
    </GridPane>
</HBox>
