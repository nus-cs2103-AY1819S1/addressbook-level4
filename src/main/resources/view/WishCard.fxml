<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS">
    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
    </columnConstraints>
    <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
      <padding>
        <Insets top="20" right="10" bottom="10" left="15" />
      </padding>
      <HBox spacing="0" alignment="CENTER_LEFT">
        <GridPane>
          <children>
            <Label fx:id="name" text="\$first" styleClass="cell_big_label" GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <Label fx:id="progress" text="\$progress" styleClass="cell_big_green_label" GridPane.halignment="RIGHT" GridPane.columnIndex="1" GridPane.rowIndex="0">
              <minWidth>
                <!-- Ensures that the label text is never truncated -->
                <Region fx:constant="USE_PREF_SIZE" />
              </minWidth>
            </Label>
          </children>
          <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="80.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="20.0" prefWidth="100.0" />
          </columnConstraints>
        </GridPane>
      </HBox>
      <FlowPane fx:id="tags">
        <padding>
          <Insets top="20" bottom="20" />
        </padding>
      </FlowPane>
      <ProgressBar fx:id="progressBar" prefHeight="8.0" prefWidth="300.0" progress="0.0" />
    </VBox>
  </GridPane>
</HBox>
