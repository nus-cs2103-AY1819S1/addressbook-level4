<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS" fx:id="cardMedicine">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0" styleClass="card">
            <padding>
                <Insets top="5" right="5" bottom="5" left="5" />
            </padding>
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Label fx:id="id" styleClass="cell_big_label">
                    <minWidth>
                        <!-- Ensures that the label text is never truncated -->
                        <Region fx:constant="USE_PREF_SIZE" />
                    </minWidth>
                </Label>
                <Label fx:id="medicineName" text="\$first" styleClass="cell_big_label" />
            </HBox>
            <Label fx:id="medicineType" styleClass="cell_small_label" text="\$type" />
            <Label fx:id="effectiveDosage" styleClass="cell_small_label" text="\$effective dosage" />
            <Label fx:id="lethalDosage" styleClass="cell_small_label" text="\$lethal dosage" />
            <Label fx:id="price" styleClass="cell_small_label" text="\$price" />
            <Label fx:id="quantity" styleClass="cell_small_label" text="\$lethal dosage" />
        </VBox>
    </GridPane>
</HBox>
