<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.text.Font?>

<!-- the fxml for gridpane was taken from
https://www.callicoder.com/javafx-fxml-form-gui-tutorial/
as I was unable to get my own implementation to format nicely -->
<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
          alignment="center" hgap="10" vgap="10">
    <padding><Insets top="40" right="40" bottom="40" left="40"/></padding>
    <columnConstraints>
        <ColumnConstraints minWidth="100" prefWidth="100" maxWidth="Infinity" halignment="RIGHT">
        </ColumnConstraints>
        <ColumnConstraints minWidth="200" prefWidth="200" maxWidth="Infinity" hgrow="ALWAYS">
        </ColumnConstraints>
    </columnConstraints>

    <!-- Title Label -->
    <Label fx:id="titleLabel" text="Event Title"
           GridPane.columnIndex="0" GridPane.rowIndex="0"
           GridPane.columnSpan="2" GridPane.rowSpan="1"
           GridPane.halignment="CENTER" >
        <font>
            <Font size="24" />
        </font>
        <GridPane.margin>
            <Insets top="20" bottom="20" />
        </GridPane.margin>
    </Label>

    <!-- Description Label -->
    <Label text="Description : "
           GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <Label fx:id="descriptionLabel" text="Some description" prefHeight="40"
           GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <!-- Venue Label -->
    <Label text="Venue : "
           GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <Label fx:id="venueLabel" text="Some venue" prefHeight="40"
           GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <!-- Date and Time Label -->
    <Label text="Date and Time : "
           GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <Label fx:id="dateTimeLabel" text="Some DateTime" prefHeight="40"
           GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <!-- Ok Button -->
    <Button text="OK"
            prefWidth="100" prefHeight="40" defaultButton="true"
            GridPane.columnIndex="0" GridPane.rowIndex="4"
            GridPane.columnSpan="2" GridPane.rowSpan="1"
            GridPane.halignment="CENTER"
            onAction="#onOkButtonClicked">
        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"></Insets>
        </GridPane.margin>
    </Button>
</GridPane>

